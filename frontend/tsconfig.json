{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    // âœ… Tambahkan ini supaya TypeScript tahu namespace JSX
    "types": [
      "react",
      "react-dom",
      "node"
    ],
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "global.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "app/components/navbar/HamburgerMenu.tsx",
    "app/api/auth/[...nextauth]/sla-logs.js",
    "app/dashboard/components/dashboard/page.jsx",
    "app/ticket/page.jsx",
    "app/sensor/page.jsx",
    "app/api/auth/[...nextauth]/route.js",
    "app/sensor-management/page.tsx",
    "app/device-management/page.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
